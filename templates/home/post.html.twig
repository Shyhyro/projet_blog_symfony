{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}
{% block body %}
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 fst-italic">{{ post.title }}</h1>
            <p class="lead my-3">{{ post.content }}</p>
            <div>
                By
                <img src="https://freesvg.org/img/Placeholder.png" height="50px" width="50px">
                <strong class="d-inline-block mb-2 text-primary">{{ post.userFk }}</strong>
            </div>
        </div>
    </div>

    {% for commentary in post.commentaries %}
        <div class="p-4 mb-3 bg-light rounded">
            <h4 class="fst-italic">{{ commentary.userFk }}</h4>
            <div>{{ commentary.date|date }}</div>
            <p class="mb-0">{{ commentary.content }}</p>
        </div>
    {% endfor %}

    {% if is_granted("ROLE_USER") %}
        <div class="container-fluid mt-4 w-50">
            <h3>New message</h3>
            {% form_theme form 'bootstrap_5_layout.html.twig' %}
            {{ form(form) }}
        </div>
    {% endif %}

{% endblock %}