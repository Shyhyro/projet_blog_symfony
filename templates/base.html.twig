<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body class="d-flex flex-column align-items-center">

<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
            Blog Symfony
        </a>
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/" class="nav-link px-2 link-primary">Home</a></li>
            {% if is_granted('ROLE_AUTHOR') %}
                <li><a href="/addPost" class="nav-link px-2 link-secondary">New post</a></li>
            {% endif %}
            {% if is_granted('ROLE_MODERATOR') %}
                <li><a href="/moderator" class="nav-link px-2 link-danger">Moderation</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
            <li><a href="/admin" class="nav-link px-2 link-danger">Administration</a></li>
            {% endif %}
        </ul>
        <div class="col-md-3 text-end">
            {% if is_granted('ROLE_USER') %}
                <a href="/logout" class="btn btn-primary">Log-out</a>
            {% else %}
                <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/register" class="btn btn-primary">Sign-up</a>
            {% endif %}
        </div>
    </header>
</div>

{% block body %}{% endblock %}
</body>

</html>